{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hibiscus",
  "version": "0.3.0",
  "identifier": "com.andrew.hibiscus",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "mainBinaryName": "Hibiscus",
  "plugins": {
    "dialog": null
  },
  "app": {
    "windows": [
      {
        "title": "Hibiscus",
        "width": 1100,
        "height": 700,
        "resizable": true,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
